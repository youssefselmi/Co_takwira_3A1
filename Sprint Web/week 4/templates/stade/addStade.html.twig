    function mapClickListen(e) {
        // console.log(e);
        // On r√©cup√®re les coordonn√©es du clic
        let pos = e.latlng

        // On cr√©e un marqueur
        addMarker(pos)

        // On affiche les coordonn√©es dans le formulaire
        document.querySelector("#lat").value=pos.lat
        document.querySelector("#lon").value=pos.lng
    }

    function addMarker(pos){
        // On v√©rifie si le marqueur existe d√©j√†
        if (marqueur != undefined) {
            // Si oui, on le retire
            mymap.removeLayer(marqueur);
        }

        // On cr√©e le marqueur aux coordonn√©es "pos"
        marqueur = L.marker(
            pos, {
                // On rend le marqueur d√©pla√ßable
                draggable: true
            }
        )
        // marqueur = L.marker(pos)

        // On √©coute le glisser/d√©poser et on met √† jour les coordonn√©es
        marqueur.on('dragend', function(e) {
            pos = e.target.getLatLng();
            document.querySelector("#lat").value=pos.lat;
            document.querySelector("#lon").value=pos.lng;
        });

        // On ajoute le marqueur
        marqueur.addTo(mymap)
    }
    function getCity(){
        // On "fabrique" l'adresse compl√®te (des v√©rifications pr√©alables seront n√©cessaires)

        let adresse = document.querySelector("#adresse").value + ", " + document.querySelector("#cp").value+ " " + document.querySelector("#ville").value;
//console.log(adresse)


        // On initialise la requ√™te Ajax
        const xmlhttp = new XMLHttpRequest

        // On d√©tecte les changements d'√©tat de la requ√™te
        xmlhttp.onreadystatechange = () => {
            // Si la requ√™te est termin√©e
            if(xmlhttp.readyState == 4){
                // Si nous avons une r√©ponse
                if(xmlhttp.status == 200){
                    // On r√©cup√®re la r√©ponse
                    let response = JSON.parse(xmlhttp.response)

                    // On r√©cup√®re la latitude et la longitude
                    let lat = response[0]['lat']
                    let lon = response[0]['lon']

                    // On √©crit les valeurs dans le formulaire
                    document.querySelector("#lat").value= lat;
                    document.querySelector("#lon").value= lon;

                    // On cr√©e le marqueur
                    pos = [lat, lon];
                    addMarker(pos);

                    // On centre la carte sur l'adresse
                    mymap.setView(pos, 11);
                }
            }
        }

        // On ouvre la requ√™te
        xmlhttp.open('get', `https://nominatim.openstreetmap.org/search?q=${adresse}&format=json&addressdetails=1&limit=1&polygon_svg=1`)

        // On envoie la requ√™te
        xmlhttp.send();

    }


